APP_NAME=prossima
ENV=development
DEBUG=true

DATABASE_URL=postgresql://postgres:password@db.projectname.supabase.co:5432/postgres

LLM_PROVIDER=hybrid
GEMINI_API_KEY=GEMINI_API_KEY
GEMINI_MODEL=gemini-2.0-flash
LLM_TEMPERATURE=0.4
LLM_TIMEOUT_SECONDS=30

INTERNAL_LLM_URL=YOUR_DEPLOYED_URL
INTERNAL_LLM_TIMEOUT=60

MAX_COMMENT_WORDS=60
MAX_COMMENT_SENTENCES=3
ALLOW_EXTERNAL_FACTS=false
ALLOW_STATISTICS=false

REQUIRE_HUMAN_APPROVAL=true
ALLOW_EDIT_AFTER_APPROVAL=false

AUTO_POSTING_ENABLED=true      
MAX_POSTS_PER_DAY=10
MAX_POSTS_PER_TARGET=1
POSTING_RETRY_LIMIT=3
POSTING_RETRY_BACKOFF_SECONDS=5

LOG_LEVEL=INFO
ENABLE_AUDIT_LOGS=true
