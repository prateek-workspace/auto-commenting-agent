# ===============================
# Application
# ===============================
APP_NAME=prossima-ai
ENV=development
DEBUG=true

# ===============================
# Database
# ===============================
DATABASE_URL=sqlite:///./engagement.db

# ===============================
# LLM Configuration
# ===============================
LLM_PROVIDER=openai
LLM_MODEL=gpt-4o-mini
LLM_API_KEY=your_llm_api_key_here
LLM_TIMEOUT_SECONDS=30

# ===============================
# Brand & Safety Controls
# ===============================
MAX_COMMENT_WORDS=60
MAX_COMMENT_SENTENCES=3
ALLOW_STATISTICS=false
ALLOW_EXTERNAL_FACTS=false

# ===============================
# Auto-Posting Controls
# ===============================
AUTO_POSTING_ENABLED=true          # ðŸ”´ GLOBAL KILL SWITCH
MAX_POSTS_PER_DAY=10
MAX_POSTS_PER_TARGET=1
POSTING_RETRY_LIMIT=3
POSTING_RETRY_BACKOFF_SECONDS=5

# ===============================
# Review & Workflow
# ===============================
REQUIRE_HUMAN_APPROVAL=true
ALLOW_EDIT_AFTER_APPROVAL=false

# ===============================
# Observability
# ===============================
LOG_LEVEL=INFO
ENABLE_AUDIT_LOGS=true
